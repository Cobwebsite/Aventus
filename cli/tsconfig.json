{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext",
			"dom"
		],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"sourceMap": true,
		"strict": false,
		"outDir": "out",
		"rootDir": "src",
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowJs": true,
		"paths": {
			"@server/*": [
				"../server/out/*"
			]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	},
	"include": [
		"src/main.ts",
		"src/interaction/RealInteraction.ts"
	],
	"exclude": [
		".vscode-test"
	],
	"references": [ // this is how we declare a dependency from
		{
			"path": "../server/"
		}
	]
}