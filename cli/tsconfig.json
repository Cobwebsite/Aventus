{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ES2023",
			"dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": false,
		"outDir": "out",
		"rootDir": "src",
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@server/*": [
				"../server/out/*"
			]
		},
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	},
	"include": [
		"src",
	],
	"exclude": [
		".vscode-test"
	],
	"references": [ // this is how we declare a dependency from
		{
			"path": "../server/"
		}
	]
}