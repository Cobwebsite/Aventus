{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ES2023", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"composite": true
	},
	"include": ["src"],
	"exclude": ["../node_modules", ".vscode-test"]
}